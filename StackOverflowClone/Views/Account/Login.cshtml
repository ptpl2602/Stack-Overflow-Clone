@model StackOverflowClone.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Log In";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="content-login">
    <div class="row justify-content-center">
        <div class="col-3">
            <form novalidate="novalidate" action="/account/login" method="post" class="needs-validation">
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-center my-5">
                    <svg aria-hidden="true" class="native svg-icon iconLogoGlyphMd" width="32" height="37" viewBox="0 0 32 37"><path d="M26 33v-9h4v13H0V24h4v9h22Z" fill="#BCBBBB"></path><path d="m21.5 0-2.7 2 9.9 13.3 2.7-2L21.5 0ZM26 18.4 13.3 7.8l2.1-2.5 12.7 10.6-2.1 2.5ZM9.1 15.2l15 7 1.4-3-15-7-1.4 3Zm14 10.79.68-2.95-16.1-3.35L7 23l16.1 2.99ZM23 30H7v-3h16v3Z" fill="#F48024"></path></svg>
                </div>
                <div class="form-login mb-5">
                    <div class="-flex flex-column align-items-start mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control font-tag-black600" name="Email" required="required" autofocus="autofocus" id="email" value="@Model.Email">
                        <div class="valid-feedback font-note">
                            Looks good!
                        </div>
                        <div class="invalid-feedback font-note">
                            Please enter email.
                        </div>
                    </div>
                    <div class="-flex flex-column align-items-start mb-3 pb-2 position-relative">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control font-tag-black600 mb-2" name="Password" required="required" value="@Model.Password" id="password" minlength="8" pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$">
                        <i class="fa-solid fa-eye-slash" id="toggle-password"></i>
                        <div class="valid-feedback font-note">
                            Looks good!
                        </div>
                        <div class="invalid-feedback font-note">
                            Passwords must contain at least eight characters, including at least 1 letter and 1 number.
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <button class="btn-inline-blue-full-width text-decoration-none">Log In</button>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        @Html.ValidationSummary()
                    </div>

                </div>
                <div class="mb-3 pt-4 text-center">
                    <span class="font-tag-black600">Don’t have an account? </span>
                    <a href="/account/signup" class="font-tag-black600 fc-blue-hover text-decoration-none">Sign Up</a>
                </div>
                <div class="mb-3 text-center">
                    <span class="font-tag-black600">Are you an employer? </span>
                    <a href="/account/signup" class="font-tag-black600 fc-blue-hover text-decoration-none">Sign up on Talent</a>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);

    function validate(e) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            e.preventDefault();
        }
        $(".needs-validation")[0].classList.add('was-validated');
    }
</script>
