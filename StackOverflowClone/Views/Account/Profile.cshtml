@model StackOverflowClone.ViewModels.UserViewModel

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div class="row mb-4">
    <div class="col p-0 d-flex align-items-center">
        <ul class="content-link-list d-inline-flex p-0">
            <li class="content-link-item list-unstyled me-2">
                <a href="#" class="content-link-item--link text-decoration-none btn-inline-orange-rounded">Profile</a>
            </li>
            <li class="content-link-item list-unstyled mx-3">
                <a href="#" class="content-link-item--link text-decoration-none btn-normal-hover">Activity</a>
            </li>
        </ul>
    </div>
    <div class="col d-flex justify-content-end">
        <a href="/account/changeprofile" class="btn-outline-black text-decoration-none d-flex justify-content-center align-items-center">
            <svg aria-hidden="true" class="pe-1" width="18" height="18" viewBox="0 0 18 18"><path fill="#3b4045" d="m2 13.13 8.5-8.5 2.88 2.88-8.5 8.5H2v-2.88Z"></path><path fill="#3b4045" d="m13.68 2.15 2.17 2.17c.2.2.2.51 0 .71L14.5 6.39l-2.88-2.88 1.35-1.36c.2-.2.51-.2.71 0Z"></path></svg>
            Edit Profile
        </a>
        <a href="/account/changepassword" class="btn-outline-black text-decoration-none d-flex justify-content-center align-items-center">
            <svg aria-hidden="true" class="pe-2" width="18" height="18" viewBox="0 0 18 18"><path fill="#3b4045" d="M17 5.5a4.5 4.5 0 0 1-5.8 4.3L10 11H8v2H6v2H4v2H1v-3.5l7.1-7.1A4.52 4.52 0 0 1 12.5 1 4.5 4.5 0 0 1 17 5.5Zm-4 1a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3Z"></path></svg>
            Change Password
        </a>
        <a href="/account/networkprofile" class="btn-outline-black text-decoration-none d-flex justify-content-center align-items-center">
            <svg aria-hidden="true" class="pe-1" width="18" height="18" viewBox="0 0 18 18"><path d="M3 4c0-1.1.9-2 2-2h8a2 2 0 0 1 2 2H3Z" fill="#8FD8F7"></path><path d="M15 11H3c0 1.1.9 2 2 2h5v3l3-3a2 2 0 0 0 2-2Z" fill="#155397"></path><path fill="#46A2D9" d="M3 5h12v2H3z"></path><path fill="#2D6DB5" d="M3 8h12v2H3z"></path></svg>
            Network Profile
        </a>
    </div>
</div>
<div class="row">
    <div class="col-9">
        <div class="row">
            <div class="col-3 p-0">
                <div class="avatar-frame d-flex flex-column align-items-center justify-content-center">
                    <img src="https://www.gravatar.com/avatar/4bf8226f1b18a595958037b0e6f221c4?s=48&d=identicon&r=PG" width="128" height="128" alt="Avatar" class="content-img rounded">
                    <p class="font-black13 text-center mt-4 fs-4"><span class="fw-bold">43</span> profile views</p>
                </div>
            </div>
            <div class="col-8 p-0 mt-3">
                <span class="font-black26">@Session["CurrentUserName"]</span>
                <div class="row mt-5">
                    <div class="col-1 p-0 mx-3 text-center">
                        <p class="font-black13 fw-bold">0</p>
                        <p class="font-black13">answers</p>
                    </div>
                    <div class="col-2 p-0 text-center">
                        <p class="font-black13 fw-bold">0</p>
                        <p class="font-black13">questions</p>
                    </div>
                    <div class="col-1 p-0 text-center">
                        <p class="font-black13 fw-bold">0</p>
                        <p class="font-black13">comments</p>
                    </div>
                    <div class="col-2 p-0 text-center">
                        <p class="font-black13 fw-bold  ">0</p>
                        <p class="font-black13">tags</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-3">
                <p class="font-black13">
                    <svg aria-hidden="true" class="pe-1" width="18" height="18" viewBox="0 0 18 18"><path d="M3 4c0-1.1.9-2 2-2h8a2 2 0 0 1 2 2H3Z" fill="#8FD8F7"></path><path d="M15 11H3c0 1.1.9 2 2 2h5v3l3-3a2 2 0 0 0 2-2Z" fill="#155397"></path><path fill="#46A2D9" d="M3 5h12v2H3z"></path><path fill="#2D6DB5" d="M3 8h12v2H3z"></path></svg>
                    <span class="fw-bold">Communities</span>
                </p>
                <hr>
                <a href="#" class="font-black13 fc-blue text-decoration-none d-flex align-items-center">
                    <img src="~/Content/assets/img/stack-overflow-color.png" alt="Icon" width="18" height="18" class="pe-2">
                    <span>Stack Overflow</span>
                </a>

                <p class="font-black13 mt-5 pt-2">
                    <span class="fw-bold">Top network posts</span>
                </p>
                <hr>
                <p class="font-black13">
                    We respect a laser-like focus on one topic
                </p>
            </div>
            <div class="col-8 pe-0">
                <p class="font-black13">
                    <span class="fw-bold">Top tags</span>
                </p>
                <hr>
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <a href="#" class="question-tags">reacjs</a>
                    <p class="font-tag-black600 fw-bold">POST 2</p>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <a href="#" class="question-tags">hmtl</a>
                    <p class="font-tag-black600 fw-bold">POST 8</p>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <a href="#" class="question-tags">asp.net</a>
                    <p class="font-tag-black600 fw-bold">POST 4</p>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <a href="#" class="question-tags">nodejs</a>
                    <p class="font-tag-black600 fw-bold">POST 3</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="card border-warning-subtle">
            <div class="card-header bg-warning-subtle fw-bold fs-5 py-3 border-warning-subtle">
                The Overflow Blog
            </div>
            <div class="card-body bg-warning bg-opacity-10 border-warning-subtle py-4">
                <a href="#" class="content-note-link">
                    <i class="bi bi-pen pe-2"></i>
                    Sending bugs back in time
                </a>
            </div>
        </div>
        <div class="card border-warning-subtle">
            <div class="card-header bg-warning-subtle fs-5 fw-bold py-3  border-warning-subtle">
                Featured on Meta
            </div>
            <div class="card-body bg-warning bg-opacity-10 py-4">
                <a href="#" class="content-note-link">
                    <i class="bi bi-chat-left pe-2"></i>
                    Sites can now request to enable a banner to warn about their policy on AI-generated content
                </a> <br>
                <a href="#" class="content-note-link">
                    <img src="~/Content/assets/img/stack-overflow.png" class="me-2" alt="Icon Stack Overfow" style="width: 12px; height: 12px;">
                    Temporary policy: Generative AI (e.g., ChatGPT) is banned
                </a> <br>
                <a href="#" class="content-note-link">
                    <img src="~/Content/assets/img/stack-overflow.png" class="me-2" alt="Icon Stack Overfow" style="width: 12px; height: 12px;">
                    January 2024 post from Ryan Polk, Chief Product Officer
                </a>
            </div>
        </div>

        <div class="mt-4 card">
            <div class="card-header fs-4 font-tag-black600 py-3 bg-secondary bg-opacity-10">
                Custom Filters
            </div>
            <div class="card-body py-4">
                <a href="#" class="text-decoration-none font-tag-black600 text-primary">Create a custom filter</a>
            </div>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col">
        <a href="/account/logout" class="btn-inline-blue text-decoration-none">Log Out</a>
    </div>
</div>

<script>
    $("a[href='/account/profile']").attr("id", "active")
</script>

